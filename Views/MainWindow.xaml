<Window
    x:Class="HZBot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HZBot"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="mainWindow"
    Title="MainWindow"
    Width="1190.574"
    Height="613.935"
    DataContext="{Binding ElementName=mainWindow}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:ControlPanelUserControl Grid.Row="0" Account="{Binding Account}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <local:CharacterStatUserControl Grid.Column="0" Account="{Binding Account}" />
            <local:HideOutUserControl Grid.Column="1" Account="{Binding Account}" />

            <StackPanel Grid.Column="2">
                <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Account.Data.quests}" />
                <local:QuestsUserControl Margin="10" Account="{Binding Account}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>